<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_viewnewpost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:orientation="horizontal"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="5dp"
    android:background="@drawable/selector_item"
    android:stateListAnimator="@drawable/translation_selector"
    android:clickable="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_vertical"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textSize="@dimen/textlarge"
                android:id="@+id/texttitlenewpost"
                android:textColor="@android:color/black"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textauthornewpost"
                android:textSize="@dimen/textmedium"
                android:textStyle="italic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="26/07/2014"
                android:id="@+id/textdatanewpost"
                android:textStyle="italic"
                android:textSize="@dimen/textsmall"
                android:paddingTop="8dp"
                android:paddingRight="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:id="@+id/textnumbernewpost"
            android:textStyle="italic"
            android:layout_gravity="center_vertical|right"
            android:textSize="@dimen/textsmall"
            android:singleLine="false"
            android:layout_marginRight="10dp"
            android:background="@drawable/badge"
            android:padding="10dp" />


    </LinearLayout>

</android.support.v7.widget.CardView>